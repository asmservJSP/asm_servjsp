<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>adminHome</servlet-name>
        <servlet-class>asm.servjsp.controller.admin.adminHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Category</servlet-name>
        <servlet-class>asm.servjsp.controller.admin.Category</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Film</servlet-name>
        <servlet-class>asm.servjsp.controller.admin.Film</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>putCategory</servlet-name>
        <servlet-class>asm.servjsp.controller.admin.putCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>detailsFilm</servlet-name>
        <servlet-class>asm.servjsp.controller.user.detailsFilm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>booking</servlet-name>
        <servlet-class>asm.servjsp.controller.user.userBooking</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete_edit_Booking</servlet-name>
        <servlet-class>asm.servjsp.controller.admin.delete_edit_Booking</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminHome</servlet-name>
        <url-pattern>/admin/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Category</servlet-name>
        <url-pattern>/admin/addC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Film</servlet-name>
        <url-pattern>/admin/film</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>putCategory</servlet-name>
        <url-pattern>/admin/putC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>detailsFilm</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>booking</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete_edit_Booking</servlet-name>
        <url-pattern>/admin/booking</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
